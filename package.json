{
	"name": "node-api-boilerplate",
	"version": "1.0.0",
	"description": "Node.js app for building RESTful APIs using Express",
	"private": true,
	"repository": "https://github.com/vipulwairagade/node-api-boilerplate",
	"author": "Vipul Wairagade <sonu.wairagade@gmail.com>",
	"bugs": {
		"url": "https://github.com/vipulwairagade/node-api-boilerplate/issues"
	},
	"license": "MIT",
	"scripts": {
		"start": "cross-env-shell NODE_ENV=production npx babel-node src/index.js | cross-env-shell NODE_ENV=production rotate-logs --config=$INIT_CWD/src/configs/app-log.config.js | cross-env-shell NODE_ENV=production rotate-logs --config=$INIT_CWD/src/configs/http-request-log.config.js",
		"dev": "cross-env-shell NODE_ENV=development nodemon --exec npx babel-node src/index.js",
		"debug": "cross-env-shell NODE_ENV=development npx babel-node src/index.js",
		"prepare": "husky install",
		"commit": "cz",
		"lint": "eslint . --ext .js",
		"lint:fix": "npm run lint -- --fix",
		"db": "cross-env-shell db-migrate --config '$INIT_CWD/db/dbmrc.json' -m '$INIT_CWD/db/migrations'",
		"db:create": "npm run db db:create",
		"db:drop": "npm run db db:drop",
		"migrate:up": "npm run db up:migrate",
		"migrate:down": "npm run db down:migrate",
		"migrate:create": "npm run db create:migrate",
		"migrate:reset": "npm run db reset:migrate",
		"seed:up": "npm run db up:seed",
		"seed:down": "npm run db down:seed",
		"seed:create": "npm run db create:seed"
	},
	"dependencies": {
		"@vrbo/pino-rotating-file": "^3.0.0",
		"bcrypt": "^5.0.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"crypto-js": "^4.0.0",
		"db-migrate": "^0.11.13",
		"db-migrate-mysql8": "^1.0.1",
		"debug": "~2.6.9",
		"dotenv": "^11.0.0",
		"express": "^4.17.2",
		"express-pino-logger": "^5.0.0",
		"google-libphonenumber": "^3.2.26",
		"handlebars": "^4.7.7",
		"helmet": "^5.0.2",
		"http-errors": "~1.6.3",
		"http-status-codes": "^2.1.4",
		"joi": "^17.4.0",
		"jsonwebtoken": "^8.5.1",
		"multer": "^1.4.2",
		"mysql2": "^2.3.3",
		"nodemailer": "^6.4.11",
		"openapi-types": "^7.0.1",
		"pino": "^6.5.1",
		"randomatic": "^3.1.1",
		"swagger-ui-express": "^4.1.4",
		"util": "^0.12.2"
	},
	"devDependencies": {
		"@babel/core": "^7.13.15",
		"@babel/node": "^7.13.13",
		"@babel/preset-env": "^7.13.15",
		"@babel/register": "^7.13.14",
		"@commitlint/cli": "^16.0.2",
		"@commitlint/config-conventional": "^16.0.0",
		"commitizen": "^4.2.4",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.6.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-vipul-base": "^1.2.1",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.7",
		"nodemon": "^2.0.4",
		"pino-pretty": "^5.1.1",
		"prettier": "^2.5.1"
	},
	"imports": {
		"#configs/*": "./src/configs/*.js",
		"#constants/*": "./src/constants/*.js",
		"#helpers/*": "./src/helpers/*.js",
		"#middlewares/*": "./src/middlewares/*.js",
		"#utils/*": "./src/utils/*.js"
	}
}
